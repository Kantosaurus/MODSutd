{
  "name": "modsutd-monorepo",
  "version": "1.0.0",
  "description": "MODSutd application with frontend and backend",
  "private": true,
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml up --build",
    "build": "docker-compose build",
    "start": "docker-compose up",
    "stop": "docker-compose down",
    "clean": "docker-compose down -v --remove-orphans",
    "frontend:dev": "cd frontend && npm run dev",
    "backend:dev": "cd backend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "backend:build": "cd backend && npm run build",
    "db:migrate": "cd backend && npm run prisma:migrate",
    "db:generate": "cd backend && npm run prisma:generate",
    "db:studio": "cd backend && npm run prisma:studio"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}