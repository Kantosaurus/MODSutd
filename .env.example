# ===========================================
# MODSutd Environment Configuration
# ===========================================
# Copy this file to .env and update the values

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=production
BACKEND_PORT=4000
FRONTEND_PORT=3000

# ===========================================
# URLs
# ===========================================
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000/graphql

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# ===========================================
# PostgreSQL Configuration
# ===========================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=modsutd
DB_USER=postgres
DB_PASSWORD=change-this-password-in-production

# For Docker Compose
POSTGRES_DB=modsutd
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-password-in-production

# ===========================================
# Neo4j GraphDB Configuration
# ===========================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change-this-password-in-production

# For Docker Compose (format: user/password)
NEO4J_AUTH=neo4j/change-this-password-in-production

# ===========================================
# Development Overrides (uncomment for local dev)
# ===========================================
# NODE_ENV=development
# DB_HOST=localhost
# NEO4J_URI=bolt://localhost:7687
